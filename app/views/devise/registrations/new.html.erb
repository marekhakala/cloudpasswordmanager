<% provide(:title, t('devise_sign_up.sign_up_title')) %>
<%= render 'layouts/header_public' %>

<div id="headerwrap">
  <div class="container">
    <div class="row centered">
      <div class="col-lg-12">
        <h3>
          <i class="fa fa-3x fa-plus"></i><br />
          <%= t('devise_sign_up.sign_up_first') %> <b><%= t('devise_sign_up.sign_up_second') %></b>
          <br /><br />
        </h3>
        <div class="col-lg-12 col-md-12 col-xs-12 form-area">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-group text-left form-area-error">
              <%= devise_error_messages! %>
            </div>
            <div class="form-group">
              <%= f.text_field :fullname, class: 'form-control', placeholder: t('devise_sign_up.full_name_placeholder'), autofocus: true %>
            </div>
            <div class="form-group">
              <%= f.email_field :email, class: 'form-control', placeholder: t('devise_sign_up.email_placeholder') %>
            </div>
            <div class="form-group">
              <%= f.text_field :address, class: 'form-control', placeholder: t('devise_sign_up.address_placeholder') %>
            </div>
            <div class="form-group text-right">
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> <%= t('devise_sign_up.minimum_password_characters') %>)</em>
              <% end %><br />
              <%= f.password_field :password, class: 'form-control', placeholder: t('devise_sign_up.password_placeholder'), autocomplete: "off" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: t('devise_sign_up.password_confirmation_placeholder'), autocomplete: "off" %>
            </div>
            <div class="actions">
              <%= f.submit t('sign_up_link'), class: 'btn btn-block btn-theme' %>
            </div>
          <% end %>
          <hr />
          <div class="form-group">
            <%= link_to t('sign_in_link'), new_user_session_path %>
            |
            <%= link_to t('forgot_your_password'), new_password_path(resource_name) %>
          </div>
        </div>
        <div class="col-lg-12 col-md-12 col-xs-12">
          <br /><br />
        </div>
        <br />
      </div>
    </div>
  </div>
</div>

<%= render 'layouts/footer_public' %>
