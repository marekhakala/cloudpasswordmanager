<% provide(:title, t('devise_sign_in.sign_in_title')) %>
<%= render 'layouts/header_public' %>

<div id="headerwrap">
  <div class="container">
    <div class="row centered">
      <div class="col-lg-12">
        <h3>
          <i class="fa fa-3x fa-address-card"></i><br />
          <%= t('devise_sign_in.sign_in_first') %> <b><%= t('devise_sign_in.sign_in_second') %></b>
          <br /><br />
        </h3>
        <div class="col-lg-12 col-md-12 col-xs-12 form-area">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group form-area-error">
              <br />
              <% if flash[:alert] %>
                <div class="callout callout-danger">
                  <%= flash[:alert] %><br />
                </div>
              <% end %>
            </div>
            <div class="form-group">
              <%= f.email_field :email, class: 'form-control', placeholder: t('email_field'), autofocus: true %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: 'form-control', placeholder: t('password_field'), autocomplete: "off" %>
            </div>
            <% if devise_mapping.rememberable? -%>
              <div class="form-group text-right">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>
            <div class="actions">
              <%= f.submit t('sign_in_link'), class: 'btn btn-block btn-theme' %>
            </div>
          <% end %>
          <hr />
          <div class="form-group">
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to t('sign_up_link'), new_registration_path(resource_name) %>
            <% end -%>
            |
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to t('forgot_your_password'), new_password_path(resource_name) %>
            <% end -%>
          </div>
        </div>
        <div class="col-lg-12 col-md-12 col-xs-12">
          <br /><br />
        </div>
        <br />
      </div>
    </div>
  </div>
</div>

<%= render 'layouts/footer_public' %>
