<% provide(:title, t('devise_unlocks.unlocks_title')) %>
<%= render 'layouts/header_public' %>

<div id="headerwrap">
  <div class="container">
    <div class="row centered">
      <div class="col-lg-12">
        <h3>
          <i class="fa fa-3x fa-info-circle"></i><br />
          <%= t('devise_unlocks.unlocks_subtitle') %><br /><br />
        </h3>
        <div class="col-lg-12 col-md-12 col-xs-12 form-area">
          <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
            <div class="form-group text-left">
              <%= devise_error_messages! %>
            </div>
            <div class="form-group">
              <%= f.email_field :email, class: 'form-control', placeholder: t('devise_unlocks.email_placeholder'), autofocus: true %>
            </div>
            <div class="actions">
              <%= f.submit t('devise_unlocks.unlock_instructions_submit') , class: 'btn btn-block btn-theme' %>
            </div>
          <% end %>
        </div>
        <div class="col-lg-12 col-md-12 col-xs-12">
          <br /><br />
        </div>
        <br />
      </div>
    </div>
  </div>
</div>

<%= render 'layouts/footer_public' %>
