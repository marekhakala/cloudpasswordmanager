<section class="col-md-3">
  <div class="box box-info">
    <div class="box-header">
      <h3 class="box-title">
        <i class="fa fa-folder-open"></i> <%= t('directory_entries.left_side.directories_title') %>
      </h3>
    </div>
    <div class="box-body">
      <a id="directory_list_refresh" class="btn btn-info btn-xs btn-block">
        <i class="fa fa-refresh"></i> <%= t('refresh_title') %>
      </a>
      <hr />
      <div id="directory_list_content"></div>
      <div id="directory_list_context_menu">
        <ul class="dropdown-menu" role="menu">
          <li><a tabindex="-1" data-action-name="new_directory"><i class="fa fa-folder"></i> <%= t('directory_entries.left_side.new_directory') %></a></li>
          <li class="divider"></li>
          <li><a tabindex="-1" data-action-name="edit_directory"><i class="fa fa-pencil-square-o"></i> <%= t('directory_entries.left_side.edit_directory') %></a></li>
          <li><a tabindex="-1" data-action-name="delete_directory"><i class="fa fa-times"></i> <%= t('directory_entries.left_side.delete_directory') %></a></li>
        </ul>
      </div>
      <hr />
      <div>
        <%= render "directory_entries/modals/directory_form" %>
        <%= render "directory_entries/modals/directory_delete" %>

        <button id="directory_list_button_new_directory" type="button" class="btn btn-default btn-block">
          <i class="fa fa-folder"></i> <%= t('directory_entries.left_side.new_directory') %>
        </button>
        <button id="directory_list_button_new_password_entry" type="button" class="btn btn-default btn-block">
          <i class="fa fa-lock"></i> <%= t('directory_entries.left_side.new_password_entry') %>
        </button>
        <button data-toggle="collapse" data-target="#current_directory" class="btn btn-default btn-block">
          <i class="fa fa-cog"></i> <%= t('directory_entries.left_side.current_directory_actions') %>
        </button>
        <div id="current_directory" class="collapse">
          <br />
          <button id="directory_list_button_edit_directory" type="button" class="btn btn-default btn-block">
            <i class="fa fa-pencil-square-o"></i> <%= t('directory_entries.left_side.edit_directory') %>
          </button>
          <button id="directory_list_button_delete_directory" type="button" class="btn btn-default btn-block">
            <i class="fa fa-times"></i> <%= t('directory_entries.left_side.delete_directory') %>
          </button>
        </div>
      </div>
    </div>
  </div>
</section>
