<div id="directory_form_modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 id="directory_form_title" class="modal-title"></h4>
      </div>
      <div class="modal-body">
        <p id="directory_form_alert_container"></p>
        <span id="directory_form_data"></span>
        <div class="form-group">
          <label for="directory_form_label"> <%= t('directory_entries.modal_windows.directory_form_label') %> <i>(<%= t('required_title') %>)</i></label>
          <input id="directory_form_label" name="Label" type="text" class="form-control" autofocus="autofocus" placeholder="Label">
        </div>
        <div class="form-group">
          <label for="directory_form_description"> <%= t('directory_entries.modal_windows.directory_form_description') %></label>
          <textarea id="directory_form_description" class="form-control" rows="3"></textarea>
        </div>
        <div class="form-group">
          <label for="directory_form_directory"> <%= t('directory_entries.modal_windows.directory_form_directory') %> <i>(<%= t('required_title') %>)</i></label>
          <select id="directory_form_directory" class="form-control">
          </select>
        </div>
      </div>
      <div class="modal-footer">
        <span id=directory_form_actions></span>
        <button id="directory_form_button_cancel" type="button" class="btn btn-default" data-dismiss="modal">
          <i class="fa fa-times"></i> <%= t('cancel_title') %>
        </button>
      </div>
    </div>
  </div>
</div>
