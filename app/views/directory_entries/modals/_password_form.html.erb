<div id="password_form_modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 id="password_form_title" class="modal-title"></h4>
      </div>
      <div class="modal-body">
        <p id="password_form_alert_container"></p>
        <span id="password_form_data"></span>
        <div class="form-group">
          <label for="password_form_label">Label <i>(Required)</i></label>
          <input id="password_form_label" name="Label" type="text" class="form-control" placeholder="Label" autofocus="autofocus">
        </div>
        <div class="form-group">
          <label for="password_form_description">Description</label>
          <textarea id="password_form_description" class="form-control" rows="3"></textarea>
        </div>
        <div class="form-group">
          <label for="password_form_account">Account</label>
          <input id="password_form_account" name="Account" type="text" class="form-control" placeholder="Account">
        </div>
        <div class="form-group">
          <label for="password_form_password">Password <i>(Required)</i></label>
          <input id="password_form_password" name="Password" type="text" class="form-control" placeholder="Password">
          <br />
          <div class="input-group spinner">
            <div class="row">
              <div class="col-xs-2">
                <input id="password_form_random_password_length" type="text" class="form-control" value="8">
              </div>
              <div class="col-xs-3">
                <div class="input-group-btn-vertical">
                  <a class="btn btn-info"><i class="fa fa-caret-up"></i></a>
                  <a class="btn btn-info"><i class="fa fa-caret-down"></i></a>
                </div>
              </div>
              <div class="col-xs-7">
                <button id="password_form_generate_password" class="btn btn-info"><i class="fa fa-cog"></i> Generate password</button>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="password_form_email">E-mail</label>
          <input id="password_form_email" name="Email" type="text" class="form-control" placeholder="E-mail">
        </div>
        <div class="form-group">
          <label for="password_form_url">Url</label>
          <input id="password_form_url" name="Url" type="text" class="form-control" placeholder="Url">
        </div>
      </div>
      <div class="modal-footer">
        <span id=password_form_actions></span>
        <button id="password_from_button_close" type="button" class="btn btn-default" data-dismiss="modal">
          <i class="fa fa-times"></i> Close
        </button>
      </div>
    </div>
  </div>
</div>
