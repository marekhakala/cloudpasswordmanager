<div id="password_form_modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 id="password_form_title" class="modal-title"></h4>
      </div>
      <div class="modal-body">
        <p id="password_form_alert_container"></p>
        <span id="password_form_data"></span>
        <div class="form-group">
          <label for="password_form_label"><%= t('directory_entries.modal_windows.password_form_label') %> <i>(<%= t('required_title') %>)</i></label>
          <input id="password_form_label" name="Label" type="text" class="form-control" placeholder="<%= t('directory_entries.modal_windows.password_form_label') %>" autofocus="autofocus">
        </div>
        <div class="form-group">
          <label for="password_form_description"><%= t('directory_entries.modal_windows.password_form_description') %></label>
          <textarea id="password_form_description" class="form-control" rows="3"></textarea>
        </div>
        <div class="form-group">
          <label for="password_form_account"><%= t('directory_entries.modal_windows.password_form_account') %></label>
          <input id="password_form_account" name="Account" type="text" class="form-control" placeholder="<%= t('directory_entries.modal_windows.password_form_account') %>">
        </div>
        <div class="form-group">
          <label for="password_form_password"><%= t('directory_entries.modal_windows.password_form_password') %> <i>(<%= t('required_title') %>)</i></label>
          <input id="password_form_password" name="Password" type="text" class="form-control" placeholder="<%= t('directory_entries.modal_windows.password_form_password') %>">
          <br />
          <div class="input-group spinner">
            <div class="row">
              <div class="col-xs-2">
                <input id="password_form_random_password_length" type="text" class="form-control" value="8">
              </div>
              <div class="col-xs-3">
                <div class="input-group-btn-vertical">
                  <a class="btn btn-info"><i class="fa fa-caret-up"></i></a>
                  <a class="btn btn-info"><i class="fa fa-caret-down"></i></a>
                </div>
              </div>
              <div class="col-xs-7">
                <button id="password_form_generate_password" class="btn btn-info">
                  <i class="fa fa-cog"></i> <%= t('directory_entries.modal_windows.password_form_generate_password_button') %>
                </button>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="password_form_email"><%= t('directory_entries.modal_windows.password_form_email') %></label>
          <input id="password_form_email" name="Email" type="text" class="form-control" placeholder="<%= t('directory_entries.modal_windows.password_form_email') %>">
        </div>
        <div class="form-group">
          <label for="password_form_url"><%= t('directory_entries.modal_windows.password_form_url') %></label>
          <input id="password_form_url" name="Url" type="text" class="form-control" placeholder="<%= t('directory_entries.modal_windows.password_form_url') %>">
        </div>
      </div>
      <div class="modal-footer">
        <span id=password_form_actions></span>
        <button id="password_from_button_close" type="button" class="btn btn-default" data-dismiss="modal">
          <i class="fa fa-times"></i> <%= t('close_title') %>
        </button>
      </div>
    </div>
  </div>
</div>
