<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">
    <header class="main-header">
      <%= link_to root_path, class: "logo" do %>
        <span class="logo-mini"><b>C</b>PM</span>
        <span class="logo-lg"><i class="fa fa-lock"></i> <b>C</b>PM</span>
      <% end %>
      <nav class="navbar navbar-static-top">
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
          <span class="sr-only">Toggle navigation</span>
        </a>
        <div class="navbar-custom-menu">
          <ul class="nav navbar-nav">
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fa fa-user"></i> <%= current_user.fullname %>
              <% end %>
            </li>
            <li>
              <%= button_to destroy_user_session_path, class: "btn btn-info btn-block", style: "margin-top: 6px;", method: "delete" do %>
                <i class="fa fa-sign-out"></i> <%= t('sign_out_link') %>
              <% end %>
            </li>
            <li>&nbsp;&nbsp;</li>
          </ul>
        </div>
      </nav>
    </header>
    <aside class="main-sidebar">
      <section class="sidebar">
        <ul class="sidebar-menu">
          <li class="header"><%= t('private_main_menu.main_menu_label') %></li>
          <%= active_list_item is_controller_action?("static_pages", "home") %>
            <%= link_to root_path do %>
              <i class="fa fa-lock"></i> <span><%= t('private_main_menu.passwords_label') %></span>
            <% end %>
          </li>
          <%= active_list_item is_controller_action?("devise/registrations", "edit") %>
            <%= link_to edit_user_registration_path do %>
              <i class="fa fa-user"></i> <span><%= t('private_main_menu.profile_label') %></span>
            <% end %>
          </li>
          <% if is_users_list_access_granted? %>
            <%= active_list_item is_controller?("portal_users") %>
              <%= link_to portal_users_path do %>
                <i class="fa fa-users"></i> <span><%= t('private_main_menu.users_label') %></span>
              <% end %>
            </li>
          <% end %>
          <%= active_list_item is_controller_action?("static_pages", "api_info") %>
            <%= link_to api_info_path do %>
              <i class="fa fa-gears"></i> <span><%= t('private_main_menu.api_info_label') %></span>
            <% end %>
          </li>
        </ul>
      </section>
    </aside>
    <div class="content-wrapper">
      <%= yield %>
    </div>
    <footer class="main-footer">
      <strong>Copyright &copy; 2016</strong>
    </footer>
  </div>
</body>
