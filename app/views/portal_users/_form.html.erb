<%= form_for user_entry_object, url: user_entry_url do |f| %>
  <div class="form-group text-left">
    <% if user_entry_object.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(user_entry_object.errors.count, "error") %> <%= t('portal_users.form_prohibited_this_user_from_being_saved') %>:</h2>
        <ul>
        <% user_entry_object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <label><%= t('portal_users.form_full_name_label_and_title') %></label>
    <%= f.text_field :fullname, class: 'form-control', placeholder: t('portal_users.form_full_name_label_and_title'), autofocus: true %>
  </div>
  <div class="form-group">
    <label><%= t('portal_users.form_email_label_and_title') %></label>
    <%= f.text_field :email, class: 'form-control', placeholder: t('portal_users.form_email_label_and_title') %>
  </div>
  <div class="form-group">
    <label><%= t('portal_users.form_address_label_and_title') %></label>
    <%= f.text_field :address, class: 'form-control', placeholder: t('portal_users.form_address_label_and_title') %>
  </div>
  <div class="form-group">
    <label><%= t('portal_users.form_role_label_and_title') %></label>
    <%= f.select :role_id, resolve_roles, { prompt: "-- #{t('portal_users.form_role_prompt_title')} --" }, class: 'form-control' %>
  </div>
  <% if not user_entry_action_edit.nil? and not user_entry_action_edit %>
    <div class="form-group">
      <div class="input-group spinner">
        <div class="row">
          <div class="col-xs-2">
            <input id="password_form_random_password_length" type="text" class="form-control" value="8">
          </div>
          <div class="col-xs-3">
            <div class="input-group-btn-vertical">
              <a class="btn btn-info"><i class="fa fa-caret-up"></i></a>
              <a class="btn btn-info"><i class="fa fa-caret-down"></i></a>
            </div>
          </div>
          <div class="col-xs-7">
            <span id="password_form_generate_password" class="btn btn-info"><i class="fa fa-cog"></i> <%= t('portal_users.form_generate_password_button') %></span>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label><%= t('portal_users.form_password_label_and_title') %></label>
      <em>(<%= @minimum_password_length %> <%= t('minimum_password_characters') %>)</em>
      <%= f.text_field :password, id: 'password_form_password', class: 'form-control', placeholder: t('portal_users.form_password_label_and_title'), autocomplete: "off" %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit user_entry_button_title, class: 'btn btn-block btn-info' %>
  </div>
<% end %>
