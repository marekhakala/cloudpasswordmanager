<table id="users_list" class="table table-hover">
  <thead>
    <tr>
      <th class="center"><%= t('portal_users.users_list_column_title_id') %></th>
      <th class="center"><%= t('portal_users.users_list_column_title_account') %></th>
      <th class="center"><%= t('portal_users.users_list_column_title_role') %></th>
      <th class="center"><%= t('portal_users.users_list_column_title_actions') %></th>
    </tr>
  </thead>
  <% unless not @users.nil? and @users.empty? %>
      <% @users.each do |user_entry| %>
        <tr>
          <td><%= user_entry.id %></td>
          <td><%= mail_to user_entry.email %></td>
          <td><%= resolve_user_role_label(user_entry.role).html_safe %></td>
          <td>
            <%= link_to portal_user_path(user_entry), class: "btn btn-xs btn-default", title: t('view_title') do %>
              <i class="fa fa-eye"></i>
            <% end %>
            <%= link_to edit_portal_user_path(user_entry), class: "btn btn-xs btn-default", title: t('edit_title') do %>
              <i class="fa fa-pencil-square-o"></i>
            <% end %>
            <%= link_to change_password_portal_user_path(user_entry), class: "btn btn-xs btn-default", title: t('change_password_title') do %>
              <i class="fa fa-exchange"></i>
            <% end %>
            <%= link_to  portal_user_path(user_entry), method: :delete, data: { confirm: t('confirm_are_you_sure_text') }, class: "btn btn-xs btn-default", title: t('delete_title') do %>
              <i class="fa fa-times"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
      <tbody>
      </tbody>
    </table>
  <% else %>
      <tbody>
      </tbody>
    </table>
    <h4 class="text-center"><%= t('portal_users.users_list_is_empty') %></h4>
  <% end %>
