<% provide(:title, "Users - Edit user") %>

<section class="content-header">
  <h1><i class="fa fa-user"></i> Edit user</h1>
</section>

<% if not @user_entry.nil? and not @user_entry.role.nil? and can_manage_role? @user_entry.role %>
  <section class="content">
    <div class="row">
      <section class="col-lg-12">
        <div class="box box-info">
          <div class="box-body">
            <%= render 'form', user_entry_button_title: 'Save', user_entry_object: @user_entry, user_entry_url: portal_user_path(@user_entry), user_entry_action_edit: true %>
          </div>
        </div>
        <div id="users_edit_panel">
          <div class="panel panel-footer clearfix">
            <div class="pull-left section-list-panel-content">
              <%= link_to portal_users_path, class: "btn btn-info btn-sm", title: "Back" do %>
                <i class="fa fa-chevron-left"></i> Back
              <% end %>
            </div>
            <div class="pull-right">
            </div>
          </div>
        </div>
      </section>
    </div>
  </section>
<% else %>
  <section class="content">
    <div class="row">
      <section class="col-lg-12">
        <div class="box box-danger">
          <div class="box-body">
            <h2 class="text-center"><i class="fa fa-exclamation-triangle"></i><br /> Access Denied</h2>
          </div>
        </div>
      </section>
    </div>
  </section>
<% end %>
