<% provide(:title, "Users") %>

<section class="content-header">
  <h1><i class="fa fa-users"></i> Users</h1>
</section>

<% if is_users_list_access_granted? %>
  <section class="content">
    <div class="row">
      <section class="col-lg-12">
        <div class="box box-info">
          <div class="box-body">
            <%= render 'portal_users/users_table' %>
          </div>
        </div>
        <div id="users_list_panel">
          <div class="panel panel-footer clearfix">
            <div class="pull-left section-list-panel-content">
              <%= link_to new_portal_user_path, class: "btn btn-info btn-sm", title: "Add user" do %>
                <i class="fa fa-user-plus"></i> Add user
              <% end %>
            </div>
            <div class="pull-right">
            </div>
          </div>
        </div>
      </section>
    </div>
  </section>
<% else %>
  <section class="content">
    <div class="row">
      <section class="col-lg-12">
        <div class="box box-danger">
          <div class="box-body">
            <h2 class="text-center"><i class="fa fa-exclamation-triangle"></i><br /> Access Denied</h2>
          </div>
        </div>
      </section>
    </div>
  </section>
<% end %>
