<% provide(:title, "Welcome!") %>
<%= render 'layouts/header_public' %>

<div id="headerwrap">
  <div class="container">
    <div class="row centered">
      <div class="col-lg-12">
        <h3>
          <i class="fa fa-4x fa-lock"></i><br />
          Welcome to <b>Cloud Password Manager</b>!
          <br /><br />
        </h3>
          <div class="col-lg-12 col-md-12 col-xs-12" style="background: white;">
            <%= form_for(:user, :url => session_path(:user)) do |f| %>
              <div class="form-group">
                <% if flash[:alert] %>
                  <div class="callout callout-danger">
                    <%= flash[:alert] %><br />
                  </div>
                <% end %>
              </div>
              <div class="form-group">
                <%= f.email_field :email, class: 'form-control', placeholder: 'E-mail', autofocus: true %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, class: 'form-control', placeholder: 'Password', autocomplete: "off" %>
              </div>
              <div class="actions">
                <%= f.submit "Sign In", class: 'btn btn-block btn-theme' %>
              </div>
              <br />
              <div class="form-group">
                  <%= link_to "Sign Up", new_user_registration_path %>
                |
                  <%= link_to "Forgot your password?", new_user_password_path %>
              </div>

            <% end %>
          </div>
          <div class="col-lg-12 col-md-12 col-xs-12">
            <br />
            <br />
          </div>
        <br />
      </div>
    </div>
  </div>
</div>

<div id="features">
  <div class="container">
    <div class="row centered">
      <h1>Features</h1>
      <br />
      <br />
      <div class="col-lg-6">
        <i class="fa fa-4x fa-lock"></i>
        <h3>Password manager</h3>
        <p>The open source solution for you.</p>
      </div>
      <div class="col-lg-6">
        <i class="fa fa-4x fa-cogs"></i>
        <h3>Web API</h3>
        <p>The web application offer web API for integration with services or mobile applications.</p>
      </div>
    </div>
    <br />
  </div>
</div>

<%= render 'layouts/footer_public' %>
