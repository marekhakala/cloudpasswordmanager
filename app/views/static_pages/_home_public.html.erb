<% provide(:title, t('home.welcome_title')) %>
<%= render 'layouts/header_public' %>

<div id="headerwrap">
  <div class="container">
    <div class="row centered">
      <div class="col-lg-12">
        <h3>
          <i class="fa fa-4x fa-lock"></i><br />
          <%= t('home.welcome_to') %> <b>Cloud Password Manager</b>!
          <br /><br />
        </h3>
          <div class="col-lg-12 col-md-12 col-xs-12" style="background: white;">
            <%= form_for(:user, :url => session_path(:user)) do |f| %>
              <div class="form-group">
                <% if flash[:alert] %>
                  <div class="callout callout-danger">
                    <%= flash[:alert] %><br />
                  </div>
                <% end %>
              </div>
              <div class="form-group">
                <%= f.email_field :email, class: 'form-control', placeholder: t('email_field'), autofocus: true %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, class: 'form-control', placeholder: t('password_field'), autocomplete: "off" %>
              </div>
              <div class="actions">
                <%= f.submit t('home.sign_in_submit'), class: 'btn btn-block btn-theme' %>
              </div>
              <br />
              <div class="form-group">
                  <%= link_to t('sign_up_link'), new_user_registration_path %>
                |
                  <%= link_to t('forgot_your_password'), new_user_password_path %>
              </div>
            <% end %>
          </div>
          <div class="col-lg-12 col-md-12 col-xs-12">
            <br />
            <br />
          </div>
        <br />
      </div>
    </div>
  </div>
</div>

<div id="features">
  <div class="container">
    <div class="row centered">
      <h1><%= t('home.features_title') %></h1>
      <br />
      <br />
      <div class="col-lg-6">
        <i class="fa fa-4x fa-lock"></i>
        <h3><%= t('home.features_one_title') %></h3>
        <p><%= t('home.features_one_text') %></p>
      </div>
      <div class="col-lg-6">
        <i class="fa fa-4x fa-cogs"></i>
        <h3><%= t('home.features_two_title') %></h3>
        <p><%= t('home.features_two_text') %></p>
      </div>
    </div>
    <br />
  </div>
</div>

<%= render 'layouts/footer_public' %>
